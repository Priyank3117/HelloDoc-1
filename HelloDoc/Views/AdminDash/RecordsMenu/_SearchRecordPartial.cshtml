@model List<DAL.ViewModel.SearchRecords>
<div class="table-responsive mt-4 mb-4">
    <table class="table table-hover">
        <thead class="table-light">
            <tr class="text-center">
                <th>Patient Name</th>
                <th >Requester</th>
                <th >Date Of Service</th>
                <th >Close Case date</th>
                <th >Email</th>
                <th >Phone Number</th>
                <th >Address</th>
                <th >Zip</th>
                <th >Request Status</th>
                <th >Physician</th>
                <th >Physician Note</th>
                <th >Cancelled By Providor Note</th>
                <th >Admin Note</th>
                <th >Patient Note</th>
                <th >Delete Permanently</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>
                        @item.PatientName
                    </td>
                    <td scope="row">
                        @if (item.RequestTypeId == 4)
                        {
                            <span>Business</span>
                        }
                        @if (item.RequestTypeId == 1)
                        {
                            <span>Patient</span>
                        }
                        @if (item.RequestTypeId == 2)
                        {
                            <span>Family/Friend</span>
                        }
                        @if (item.RequestTypeId == 3)
                        {
                            <span>Concierge</span>
                        }

                    </td>
                    <td s>@item.DateOfService</td>
                    <td s>@item.CloseDate</td>
                    <td s>@item.Email</td>
                    <td s>@item.PhoneNumber</td>
                    <td s>@item.Address</td>
                    <td s>@item.Zip</td>
                    <td s>@item.RequestStatus</td>
                    <td s>@item.PhysicianName</td>
                    <td s>@item.PhysicianNote</td>
                    <td s>@item.CancelledByProvidor</td>
                    <td s>@item.AdminNotes</td>
                    <td s>@item.PatientNote</td>
                    <td s>
                        <div class="d-flex">
                            <a class="btn btn-outline-info rounded me-2" asp-action="DeleteRecord" asp-route-id="@item.RequestId">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.min.css">