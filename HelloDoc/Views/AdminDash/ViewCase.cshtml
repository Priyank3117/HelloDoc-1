@model DAL.ViewModel.ViewCase;
 
@{
    ViewData["Title"] = "viewCase";
    if (ViewBag.IsPhysican)
    {
        Layout = "~/Views/Shared/_ProviderDashBoard.cshtml";
    }
    if (!ViewBag.IsPhysican)
    {
        Layout = "~/Views/Shared/_AdminDash.cshtml";
    }
}




<div class="bg-body-secondary">
    <div class="mx-auto pt-4  pb-3 mb-5" style="width:70%;">
        <div class="d-flex justify-content-between my-2">
            <h3>New Request</h3><br />
            @if (!ViewBag.IsPhysican)
            {
                <a asp-action="AdminDash" asp-controller="AdminDash"><button type="button" class="btn btn-primary btn  border border-info bg-transparent text-info shadow-none text-decoration-none ">Back</button></a>

            }
            else
            {
                <a asp-action="ProviderDashBoard" asp-controller="ProviderDashBoard"><button type="button" class="btn btn-primary btn  border border-info bg-transparent text-info shadow-none text-decoration-none ">Back</button></a>
            }
        </div>
        <div class=" shadow white-bag p-4">
            <h4 class="pt-3 mb-4">Patient Information</h4>

            <p>Confirmation Number</p>
     
            <h4 class="mb-5 text-info">@Model.ConfirmationNumber</h4>

            <form method="post" id="emailForm" enctype="multipart/form-data" asp-action="ViewCase">
                <div class="row">
                    <div class="col col-12 mb-3">
                        <div class="form-floating">
                            <textarea class="form-control"
                            asp-for="Notes"
                                      placeholder="Leave a comment here"
                                      id="floatingTextarea2"
                                      style="height: 100px"></textarea>
                            <label for="floatingTextarea2">Patient Notes</label>
                        </div>
                    </div>
                <div class="row">
                    <div class="col col-12 col-sm-6">
                        <div class="form-floating mb-3">
                            <input type="text"
                                   asp-for="FirstName"
                                   class="form-control"
                                   id="floatingInput"
                                   placeholder="name@example.com"  />
                            <label for="floatingInput">First Name</label>

                        </div>
                    </div>
                    <div class="col col-12 col-sm-6 mb-3">
                        <div class="form-floating">
                            <input type="text"
                                    asp-for="LastName"
                                   class="form-control"
                                   id="floatingPassword"
                                   placeholder="Password" />
                            <label for="floatingPassword">Last Name</label>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col col-sm-6 col-12">
                        <div class="form-floating">
                            <input type="date"
                               asp-for="DateOfBirth"
                                   class="form-control"
                                   id="floatingPassword"
                                   placeholder="Password"  />
                            <label for="floatingPassword">Date Of Birth</label>
                        </div>
                    </div>
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input type="text"
                                    asp-for="Phone"
                                       class="form-control"
                                       id="floatingPassword"
                                       placeholder="Password"  />
                                <label for="floatingPassword"></label>
                            </div>
                        </div>

                       
                </div>

                    <div class="row">
                        <div class="col col-sm-6 col-12">
                            <div class="form-floating mb-3">
                                <input type="email" id="email"
                                       class="form-control"
                                       asp-for="Email"
                                       id="floatingInput"
                                       placeholder="name@example.com"  />
                                <label for="floatingInput">Email</label>

                            </div>
                        </div>
                     </div>

              

                <h4 class="pt-3 mt-4 mb-4">Location Information</h4>

               
                <div class="row">
                    <div class="col col-sm-6 col-12">
                        <div class="form-floating mb-3">
                            <input type="text"
                                   asp-for="region"
                                   class="form-control"
                                   id="floatingPassword"
                                   placeholder="Password" disabled />
                            <label for="floatingPassword">Region</label>
                        </div>
                    </div>
                    <div class="col col-sm-6 col-12">
                        <div class="form-floating mb-3">
                            <input type="text"
                                asp-for="address"
                                    class="form-control"
                                   id="floatingPassword"
                                   placeholder="Password" disabled />
                            <label for="floatingPassword">Business Name/Address</label>
                        </div>
                    </div>

                    </div>

                        <div class="row">
                            <div class="col col-sm-6 col-12">
                                <div class="form-floating mb-3">
                                    <input type="email" id="email"
                                           class="form-control"
                                           id="floatingInput"
                                           placeholder="name@example.com" disabled />
                                    <label for="floatingInput">Room#</label>

                                </div>
                            </div>
                        </div>

                    <div class="d-flex justify-content-end my-1">

                        @if (Model.status == 1)
                        {
                            <button onclick="toggleEdit()" type="button" class="btn border-none bg-info p-2 text-light fw-semibold me-4" id="AssignBtn">
                                Assign
                            </button>
                        }
                        <a asp-action="ViewNotes" asp-controller="AdminDash" asp-route-id="@Model.requestid">
                            <button  type="button" class="btn border-none bg-info p-2 text-light fw-semibold me-4" id="SaveBtn">
                                View Notes
                            </button>
                        </a>
                        <button type="button" class="btn border-none bg-danger p-2 text-light fw-semibold me-4" onclick="openModal(this)" data-requestid="@Model.requestid" data-name="@Model.FirstName">
                            Cancle
                        </button>
                    </div>
                </div>

            </form>
        </div>
    </div>
     </div>

@* -------------------------------Modal--------------------------------------------- *@
<div class="modal fade" id="modalForm" tabindex="-1" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h1 class="modal-title fs-5  text-white" id="exampleModalLabel">Confirm Cancellation</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>


            <form id="ModalFormsubmit">
                <div class="modal-body">
                    <p> Patient Name : <span id="text"></span></p>
                    <select class="form-select" aria-label="Default select example" name="Reason">


                    
                            
                                @foreach (var it in Model.cases)
                                {
                                    <option value="@it.CaseTagId">@it.Name</option>
                                }
                            }
 
                        
                    </select>

                    <input id="requestid" name="Requestid" hidden />
                    <div class="form-floating mt-3">
                        <textarea class="form-control" name="Notes" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px"></textarea>
                        <label for="floatingTextarea2">provide Additional Notes</label>
                    </div>

                </div>
                <div class="modal-footer">
                    <div class="d-flex justify-content-end mt-3">
                         <button type="submit" class="btn btn-info">Confirm</button>
                        <button type="button" data-bs-dismiss="modal" class="btn btn-outline-info ms-3">cancle</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@* -------------------------------Modal--------------------------------------------- *@
